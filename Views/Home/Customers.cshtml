@{ ViewData["Title"] = "Home Page"; } @model e_commerce.Models.Customer
<h1>Welcome To The Customers Page:</h1>
<br>
<h3>Add Customer:</h3>
<br>
<form action="addcustomer" method="POST">
    <label for="Name"></label>
    <input asp-for="Name">
    <button type="submit">Add Customer</button>
</form>
<br>
<br>
<table class="table" id="wide">
    <thead>
        <tr>
            <th>Customer Name:</th>
            <th>Created Date:</th>
            <th>Actions:</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in ViewBag.customers){
        <tr>
            <td>@customer.Name</td>
            <td>@customer.CreatedAt</td>
            <td>
                <a href="removeCustomer/@customer.CustomerId">Remove</a>
            </td>

        </tr>
        }
    </tbody>
</table>